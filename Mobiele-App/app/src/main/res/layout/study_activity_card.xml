<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/lineairLayoutStopwatch"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Chronometer
                        android:id="@+id/chronometerSessionTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                        android:textSize="19sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:paddingLeft="8dip">

                <TextView
                    android:id="@+id/textViewStudyActivityTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewStudyActivityModuleid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cursuscode" />

                <TextView
                    android:id="@+id/textViewStudyActivityDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beschrijving"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewStudyActivityDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duur"
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:weightSum="1">

                <Button
                    android:id="@+id/buttonStopwatchToggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="#40ff81"
                    android:text="Start"
                    android:textColor="@color/cardview_light_background" />

                <Button
                    android:id="@+id/buttonStopwatchStop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/colorAccent"
                    android:text="Stop"
                    android:textColor="@color/cardview_light_background" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>